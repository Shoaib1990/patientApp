@model patientApp.Models.Patient

<form method="post">
    <button type="submit" class="btn btn-primary" asp-controller="Home" asp-action="Diary">View Records</button>
    <button type="submit" class="btn btn-danger" asp-controller="Home" asp-action="Delete">Delete</button>
    <input type="submit" asp-controller="Home" asp-action="Index" class="btn btn-primary" value="Cancel" />
</form>

<div class="row my-2">

    <div class="col">
        <h4>Add Patient</h4>
        <div style="margin-bottom:10px">Registration form for new patient:</div>
        
        <form method="post">

            <div class="form-group">
                <label>Date</label>
                <input type="date" asp-for="regDate" class="form-control" required />                
            </div>

            <div class="form-group">
                <label>Full Name</label>
                <input type="text" asp-for="fullName" class="form-control" maxlength="25" required />
                <span asp-validation-for="fullName" class="text-danger" />
            </div>            

            <div class="form-group">
                <label>Mobile Number</label>
                <input type="text" asp-for="contactNum" class="form-control" maxlength="13" required/>
                <span asp-validation-for="contactNum" class="text-danger" />
            </div>

            <div class="form-group">
                <label>Email Address</label>
                <input type="text" asp-for="email" class="form-control" maxlength="25" required/>
                <span asp-validation-for="email" class="text-danger" />
                
            </div>

            <div class="form-group">
                <label>Date of birth</label>
                <input type="date" asp-for="dateOfBirth" class="form-control" required />
                <span asp-validation-for="dateOfBirth" class="text-danger" />
            </div>

            <div class="form-group">
                <label>Gender</label>
                <input type="text" asp-for="gender" class="form-control" maxlength="25" />
                <span asp-validation-for="gender" class="text-danger" />
            </div>
            
            <div class="form-group">
                <label>City</label>
                <input type="text" asp-for="city" class="form-control" maxlength="25" />
                <span asp-validation-for="city" class="text-danger" />
            </div>
            
            <div class="form-group">
                <label>Nationality</label>
                <input type="text" asp-for="nationality" class="form-control" maxlength="25" />
                <span asp-validation-for="nationality" class="text-danger" />
            </div>

            <div class="form-group">
                <input type="submit" asp-controller="Home" asp-action="AddSubmit" class="btn btn-warning" Text="Add" />
                <a asp-controller="Home" asp-action="Index"><input class="btn btn-warning" value="Cancel" /></a>
            </div>
        </form>

    </div>
</div>