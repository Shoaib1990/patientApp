@using patientApp.Models
@model patientApp.Models.patientManager;

<div class="row" style="margin-bottom:20px;">
    <div class="col-sm-12">
        <h4>Delete Patient</h4>
        <div style="margin-bottom:10px">Select the customer you wish to delete:</div>
        
        <form method="post">

            <div class="form-group">
                <select id="lstPatients" name="OPD" asp-items='Model.getList()' class="btn btn-secondary form-control"></select>
            </div>

            <div class="form-group">
                <input type="submit" asp-controller="Home" asp-action="DeleteSubmit" class="btn btn-primary" value="Delete" />
                <input type="submit" asp-controller="Home" asp-action="Index" class="btn btn-primary" value="Cancel" />
            </div>
        </form>

    </div>
</div>